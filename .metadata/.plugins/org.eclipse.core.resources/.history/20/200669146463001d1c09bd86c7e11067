#include "7seg.h"

int seg[4] = {0,0,0,0};

void update(){
	if(seg[0] == 1) HAL_GPIO_WritePin(A0_GPIO_Port, A0_Pin, GPIO_PIN_SET);
	if(seg[1] == 1) HAL_GPIO_WritePin(A0_GPIO_Port, A0_Pin, GPIO_PIN_SET);
	if(seg[2] == 1) HAL_GPIO_WritePin(A0_GPIO_Port, A0_Pin, GPIO_PIN_SET);
	if(seg[3] == 1) HAL_GPIO_WritePin(A0_GPIO_Port, A0_Pin, GPIO_PIN_SET);
}
void display(int number){
	clear();
	if(number == 1) seg[] = {0,0,0,1};
}
void clear(){
	for(int i = 0; i < 4; i++){
		seg[i] = 0;
	}
}


