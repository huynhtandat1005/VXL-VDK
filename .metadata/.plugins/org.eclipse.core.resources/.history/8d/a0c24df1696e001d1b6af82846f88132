#include "button.h"

int button_flag = 0;
int button_key = NORMAL_STATE;

int button_pressed(){
	if(button_flag == 1){
		button_flag = 0;
		return 1;
	}
	else return 0;
}

void run_button(){
	button_key = HAL_GPIO_ReadPin(button_GPIO_Port, button_Pin);
}

void getKeyInput(){
	run_button();
}
